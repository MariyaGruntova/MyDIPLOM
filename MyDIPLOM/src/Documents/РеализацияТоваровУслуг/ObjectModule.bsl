					НоваяСтрока = Услуги.Добавить();
					НоваяСтрока.Номенклатура = НоменклатураРаботыСпец.Ссылка;
				
					НоваяСтрока.Количество = Строка.КоличествоЧасовПриход;
					НоваяСтрока.Сумма = Строка.СуммаКОплатеПриход;
								
				КонецЕсли;
				
			КонецЦикла;					
		Иначе
			Сообщение = Новый СообщениеПользователю();
			Сообщение.Текст = "Не заполнена константа НоменклатураРаботыСпециалиста";
			Сообщение.Сообщить();
			Услуги.Очистить();				
		КонецЕсли;
		
